@using Abp.Application.Services.Dto
@using LesoftWuye2.Core.Propertys
@using LesoftWuye2.Application.Propertys
@using Abp.Web.Mvc.Extensions
@model Abp.Application.Services.Dto.ListResultDto<LesoftWuye2.Application.Propertys.Dto.PropertyListDto>
@{
    ViewBag.ActiveMenu = "Propertys";
    ViewBag.Title = "项目";
    List<ComboboxItemDto> citys = ViewData["citys"] as List<ComboboxItemDto> ?? new List<ComboboxItemDto>();
    List<ComboboxItemDto> types = ViewData["types"] as List<ComboboxItemDto> ?? new List<ComboboxItemDto>();
    string typesJson = "{ 'id': '', 'text': '所有类型' }";
    string citysJson = "{ 'id': '', 'text': '所有城市' }";
    foreach (var type in types)
    {
        typesJson += ",{ 'id': '" + type.Value + "', 'text': '" + type.DisplayText + "' }";
    }
    typesJson = "[" + typesJson + "]";

    foreach (var city in citys)
    {
        citysJson += ",{ 'id': '" + city.Value + "', 'text': '" + city.DisplayText + "' }";
    }
    citysJson = "[" + citysJson + "]";

}
@section scripts
{

@Html.IncludeScript("~/Content/js/file-input/bootstrap-filestyle.min.js")
@Html.IncludeScript("~/Content/js/ajaxfileupload.js")
@Html.IncludeScript("~/Content/js/kindeditor/kindeditor-min.js")
@Html.IncludeScript("~/Content/js/kindeditor/lang/zh_CN.js")

    @Html.IncludeScript("~/Views/Propertys/Index.js")
}

@section styles{
    @*@Html.IncludeStyle("~/Content/js/kindeditor/themes/default/default.css");*@
}

<!--列表-->
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header">
                <span class="widget-caption">项目管理</span>
                <div class="widget-buttons">
                    <button class="btn btn-primary btn-sm" data-role-name="Pages.Propertys.Create" data-toggle="modal" data-target="#PropertyCreateModal"><i class="fa fa-plus"></i>添加项目</button>
                </div>
            </div>


            <div class="widget-body no-padding">
                <div data-role="search-panel" id="searchpanel" data-lastsearch="@(ViewData["___searchparas"])" data-types="@Html.Raw(typesJson)" data-citys="@Html.Raw(citysJson)"></div>
                <div role="grid" id="simpledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                    <table class="table table-bordered table-hover table-striped data-list">
                        <thead class="bordered-themeprimary">
                        <tr role="row">
                            <th class='center' style="width: 70px">类型</th>
                            <th class='center' style="width: 70px">城市</th>
                            <th >名称</th>
                            <th class='center' style="width: 70px">排序号</th>
                            <th style="width: 150px" class="center">创建时间</th>
                            <th style="width: 130px" class="center">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var property in Model.Items)
                            {
                                <tr>
                                    <td class='center'>@property.TypeName</td>
                                    <td class='center'>@property.CityName</td>
                                    <td>@property.Title</td>
                                    <td class='center'>@property.Sort</td>
                                    <td class="center">@property.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td class="button-holder center">
                                        <a data-role-name="Pages.Propertys.Update" data-role="update-row" data-id="@(property.Id)" class="btn btn-default btn-xs"><i class="fa fa-edit"></i>修改</a>
                                        <a data-role-name="Pages.Propertys.Delete" data-role="delete-row" data-id="@(property.Id)" class="btn btn-default btn-xs"><i class="fa fa-trash-o"></i>删除</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @(Html.Raw(ViewData["___paging"]))
                </div>
            </div>
        </div>
    </div>
</div>

<!--添加-->
<div class="modal fade" id="PropertyCreateModal" tabindex="-1" role="dialog" aria-labelledby="PropertyCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-primary modal-lg" role="document">
        <div class="modal-content">
            <form name="propertyCreateForm" role="form" data-role='common-create-form' data-mode='modal' class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span><i class="fa fa-plus">&nbsp;</i>添加项目</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-2">
                            <div class="form-group">
                                <label label-for='lifeInfoTypeId'>所属分类<span class='required'>*</span></label>
                                <select style="width: 100%;" name="propertyTypeId" required>
                                    <option value=""></option>
                                    @{

                                        foreach (var itemDto in types)
                                        {
                                            <option value="@itemDto.Value">@itemDto.DisplayText</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-2">
                            <div class="form-group">
                                <label label-for='lifeInfoTypeId'>所属城市<span class='required'>*</span></label>
                                <select style="width: 100%;" name="propertyCityId" required>
                                    <option value=""></option>
                                    @{

                                        foreach (var itemDto in citys)
                                        {
                                            <option value="@itemDto.Value">@itemDto.DisplayText</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-8">
                            <div class='form-group'>
                                <label label-for='title'>公告标题<span class='required'>*</span></label>
                                <input class='form-control' type='text' name='title' required maxlength='@LesoftWuye2.Core.Notices.Notice.MaxTitleLength'>
                            </div>
                        </div>
                        
                    </div>
                    
                    <div class='form-group'>
                        <label>缩略图</label>
                        <br />
                        <input type="hidden" name="thumbnail" id="thumbnail" data-role="excluded">
                        <img src="/Content/img/placehold/160x100.png" id="thumbnailImg" style="width: 160px; height: 100px" />
                        &nbsp;&nbsp;<input id="uploadImage" name="uploadImage" type="file" class="filestyle" style="white-space: nowrap; display: inline" data-icon="false" data-buttonText="上传图片" data-classButton="btn btn-success btn-xs" data-input="false" onchange="tUploader.ajaxupload();">
                        &nbsp;&nbsp;<a href="javascript:void(0)" id="removeImage" onclick="tUploader.remove();" style="display: none" class="btn  btn-danger btn-xs">移除图片</a>
                    </div>
                    <div class='form-group'><label label-for='Sort'>排序号<span class='required'>*</span></label><input class='form-control' type='number' name='Sort' required></div>
                    <div class="form-group">
                        <label>内容<span class="required">*</span></label>
                        <textarea data-role="excluded" class="form-control" name="content" id="create_content" style="height:300px; width: 100%; visibility:hidden;"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i><span>取消</span></button>
                    <button type="submit" class="btn btn-primary "><i class="fa fa-save"></i><span>保存</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

