@using Abp.Application.Services.Dto
@using LesoftWuye2.Core.Activitys
@using LesoftWuye2.Application.Activitys
@using Abp.Web.Mvc.Extensions
@model Abp.Application.Services.Dto.ListResultDto<LesoftWuye2.Application.Activitys.Dto.ActivityPersonListDto>
@{
    ViewBag.ActiveMenu = "Activitys";
    ViewBag.Title = "活动参加人员";
}
@section scripts
{
    @Html.IncludeScript("~/Views/Activitys/Person.js")
}

<!--列表-->
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header">
                <span class="widget-caption">活动参加人员管理</span>
                <div class="widget-buttons">
                    
                </div>
            </div>


            <div class="widget-body no-padding">
                <div data-role="search-panel" id="searchpanel" data-lastsearch="@(ViewData["___searchparas"])"></div>
                <div role="grid" id="simpledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                    <table class="table table-bordered table-hover table-striped data-list">
                        <thead class="bordered-themeprimary">
                            <tr role="row">
                                <th>姓名</th>
                                <th>电话号码</th>
                                <th style="width: 150px" class="center">报名时间</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Items)
                            {
                                <tr>

                                    <td >@activity.Contact</td>
                                <td >@activity.Mobile</td>
                                <td class="center">@activity.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                    @(Html.Raw(ViewData["___paging"]))
                </div>
            </div>
        </div>
    </div>
</div>
