@using LesoftWuye2.Core.CurrentRooms
@using LesoftWuye2.Application.CurrentRooms
@using Abp.Web.Mvc.Extensions
@model Abp.Application.Services.Dto.ListResultDto<LesoftWuye2.Application.CurrentRooms.Dto.CurrentRoomListDto>
    @{
    ViewBag.ActiveMenu = "CurrentRooms";
    ViewBag.Title = "服务电话";
    }
    @section scripts
    {
    @Html.IncludeScript("~/Views/CurrentRooms/Index.js")
    }

    <!--列表-->
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header">
                    <span class="widget-caption">服务电话管理</span>
                    <div class="widget-buttons">
                        <button class="btn btn-primary btn-sm" data-role-name="Pages.CurrentRooms.Create" data-toggle="modal" data-target="#CurrentRoomCreateModal"><i class="fa fa-plus"></i>添加服务电话</button>
                    </div>
                </div>


                <div class="widget-body no-padding">
                    <div data-role="search-panel" id="searchpanel" data-lastsearch="@(ViewData["___searchparas"])"></div>
                    <div role="grid" id="simpledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                        <table class="table table-bordered table-hover table-striped data-list">
                            <thead class="bordered-themeprimary">
                                <tr role="row">
                                    <th class='center'>会员id</th>
<th class='center'>房间名称</th>
<th class='center'>房间编号</th>
                                    <th style="width: 150px" class="center">创建时间</th>
                                    <th style="width: 200px" class="center">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var currentroom in Model.Items)
                                {
                                <tr>
                                    <td class='center'>@currentroom.UserId</td>
<td class='center'>@currentroom.Name</td>
<td class='center'>@currentroom.Code</td>
                                    <td class="center">@currentroom.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td class="button-holder center">
                                        <a data-role-name="Pages.CurrentRooms.Update" data-role="update-row" data-id="@(currentroom.Id)" class="btn btn-default btn-xs"><i class="fa fa-edit"></i>修改</a>
                                        <a data-role-name="Pages.CurrentRooms.Delete" data-role="delete-row" data-id="@(currentroom.Id)" class="btn btn-default btn-xs"><i class="fa fa-trash-o"></i>删除</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        @(Html.Raw(ViewData["___paging"]))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--添加-->
    <div class="modal fade" id="CurrentRoomCreateModal" tabindex="-1" role="dialog" aria-labelledby="CurrentRoomCreateModalLabel" data-backdrop="static">
        <div class="modal-dialog modal-primary" role="document">
            <div class="modal-content">
                <form name="currentroomCreateForm" role="form" data-role='common-create-form' data-mode='modal' class="form-validation">
                    <div class="modal-header">
                        <h4 class="modal-title">
                            <span><i class="fa fa-plus">&nbsp;</i>添加服务电话</span>
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class='form-group'><label label-for='UserId'>会员id</label><input class='form-control' type='text' name='UserId'  ></div>
<div class='form-group'><label label-for='Name'>房间名称<span class='required'>*</span></label><input class='form-control' type='text' name='Name' required maxlength='@LesoftWuye2.Core.CurrentRooms.CurrentRoom.MaxNameLength' ></div>
<div class='form-group'><label label-for='Code'>房间编号<span class='required'>*</span></label><input class='form-control' type='text' name='Code' required maxlength='@LesoftWuye2.Core.CurrentRooms.CurrentRoom.MaxCodeLength' ></div>
                    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i><span>取消</span></button>
        <button type="submit" class="btn btn-primary "><i class="fa fa-save"></i><span>保存</span></button>
    </div>
</form>
            </div>
        </div>
    </div>

    <!--修改-->
    <div class="modal fade" id="CurrentRoomUpdateModal" tabindex="-1" role="dialog" aria-labelledby="CurrentRoomCreateModalLabel" data-backdrop="static">
        <div class="modal-dialog modal-primary" role="document">
            <div class="modal-content">
                <form name="currentroomUpdateForm" role="form" data-role='common-create-form' data-mode='modal' class="form-validation" data-bv-excluded="isActive">
                    <input name="id" type="hidden" />
                    <div class="modal-header">
                        <h4 class="modal-title">
                            <span><i class="fa fa-plus">&nbsp;</i>修改服务电话</span>
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class='form-group'><label label-for='userId'>会员id</label><input class='form-control' type='text' name='userId'  ></div>
<div class='form-group'><label label-for='name'>房间名称<span class='required'>*</span></label><input class='form-control' type='text' name='name' required maxlength='@LesoftWuye2.Core.CurrentRooms.CurrentRoom.MaxNameLength' ></div>
<div class='form-group'><label label-for='code'>房间编号<span class='required'>*</span></label><input class='form-control' type='text' name='code' required maxlength='@LesoftWuye2.Core.CurrentRooms.CurrentRoom.MaxCodeLength' ></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i><span>取消</span></button>
                        <button type="submit" class="btn btn-primary "><i class="fa fa-save"></i><span>保存</span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>








